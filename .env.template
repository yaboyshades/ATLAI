# Super Alita Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === REQUIRED API KEYS ===
GEMINI_API_KEY=your_google_gemini_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here

# === OPTIONAL CONFIGURATIONS ===
# Redis Configuration (if using external Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration  
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Performance Settings
MAX_CONCURRENT_OPERATIONS=10
EVENT_BUS_TIMEOUT=30
NEURAL_STORE_CAPACITY=1000

# Development Settings
ENABLE_HOT_RELOAD=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_TELEMETRY=false

# === ADVANCED SETTINGS ===
# Predictive World Model
WORLD_MODEL_ENABLED=true
PREDICTION_HORIZON=5

# Security Settings
SANDBOX_ENABLED=true
SECURITY_LEVEL=high

# === NOTES ===
# 1. Never commit this file with real secrets to version control
# 2. Use .env.secrets for additional sensitive configuration
# 3. See README.md for setup instructions